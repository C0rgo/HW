#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
	double m1, m2, m3, m4;
	double amb;
	double oneYear;
	setprecision(2);

	cout << "Please input your water bill for quarter 1:" << endl;
	cin >> m1;

	cout << "Please input your water bill for quarter 2:" << endl;
	cin >> m2;

	cout << "Please input your water bill for quarter 3:" << endl;
	cin >> m3;

	cout << "Please input your water bill for quarter 4:" << endl;
	cin >> m4;

	
	
	
	amb = (m1 + m2 + m3 + m4) / 12;
	

	cout << "Your average monthly bill is " << setprecision(2) << fixed << amb << endl;

	system("pause");
	return 0;
}
